<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:id="@+id/single_user"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        >
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center">

            <ProgressBar
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/progressBarImageSingleUser"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageViewSingleUser"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleTextViewSingleUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hassan Bensaltana"
                android:textSize="22sp"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/dateTextViewSingleUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bensaltana@gmail.com"
                android:textSize="16sp"
                android:textColor="#777777" />
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>